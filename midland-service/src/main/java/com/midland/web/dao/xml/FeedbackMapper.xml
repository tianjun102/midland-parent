<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.midland.web.dao.FeedbackMapper">

    <resultMap id="BaseResultMap" type="com.midland.web.model.Feedback">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="nick_name" property="nickName" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="feedback_content" property="feedbackContent" jdbcType="LONGVARCHAR"/>
        <result column="add_time" property="addTime" jdbcType="TIMESTAMP"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="is_delete" property="isDelete" jdbcType="INTEGER"/>
        <result column="purpose" property="purpose" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="operator_id" property="operatorId" jdbcType="INTEGER"/>
        <result column="operator_name" property="operatorName" jdbcType="VARCHAR"/>
        <result column="source" property="source" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
		id,nick_name,phone,feedback_content,add_time,status,remark,is_delete,purpose,user_id,operator_id,operator_name,source,type
	</sql>

    <select id="selectFeedbackById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from feedback
        where id= #{id}
    </select>

    <delete id="deleteFeedbackById">
		delete from feedback
		 where id= #{id}
	</delete>

    <update id="updateFeedbackById">
        update feedback
        <set>
            <include refid="update_option"/>
        </set>

        where id= #{id}
    </update>

    <select id="findFeedbackList" parameterType="com.midland.web.model.Feedback" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from feedback
        where 1=1
        <if test="isDelete == null">
            and is_delete=0
        </if>
        <include refid="select_option"/>
        order by id DESC
    </select>

    <insert id="insertFeedback" parameterType="com.midland.web.model.Feedback">
        insert into feedback
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="nickName != null">
                nick_name,
            </if>
            <if test="phone != null">
                phone,
            </if>
            <if test="feedbackContent != null">
                feedback_content,
            </if>
            <if test="addTime != null">
                add_time,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="isDelete != null">
                is_delete,
            </if>
            <if test="purpose != null">
                purpose,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="operatorId != null">
                operator_id,
            </if>
            <if test="operatorName != null">
                operator_name,
            </if>
            <if test="source != null">
                source,
            </if>
            <if test="type != null">
                type,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="nickName != null">
                #{nickName,jdbcType=VARCHAR},
            </if>
            <if test="phone != null">
                #{phone,jdbcType=VARCHAR},
            </if>
            <if test="feedbackContent != null">
                #{feedbackContent,jdbcType=LONGVARCHAR},
            </if>
            <if test="addTime != null">
                #{addTime,jdbcType=TIMESTAMP},
            </if>
            <if test="status != null">
                #{status,jdbcType=INTEGER},
            </if>
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
            <if test="isDelete != null">
                #{isDelete,jdbcType=INTEGER},
            </if>
            <if test="purpose != null">
                #{purpose,jdbcType=VARCHAR},
            </if>
            <if test="userId != null">
                #{userId,jdbcType=INTEGER},
            </if>
            <if test="operatorId != null">
                #{operatorId,jdbcType=INTEGER},
            </if>
            <if test="operatorName != null">
                #{operatorName,jdbcType=VARCHAR},
            </if>
            <if test="source != null">
                #{source,jdbcType=INTEGER},
            </if>
            <if test="type != null">
                #{type,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

    <sql id="update_option">
        <if test="nickName != null">
            nick_name= #{nickName,jdbcType=VARCHAR},
        </if>
        <if test="phone != null">
            phone= #{phone,jdbcType=VARCHAR},
        </if>
        <if test="feedbackContent != null">
            feedback_content= #{feedbackContent,jdbcType=LONGVARCHAR},
        </if>
        <if test="addTime != null">
            add_time= #{addTime,jdbcType=TIMESTAMP},
        </if>
        <if test="status != null">
            status= #{status,jdbcType=INTEGER},
        </if>
        <if test="remark != null">
            remark= #{remark,jdbcType=VARCHAR},
        </if>
        <if test="isDelete != null">
            is_delete= #{isDelete,jdbcType=INTEGER},
        </if>
        <if test="purpose != null">
            purpose= #{purpose,jdbcType=VARCHAR},
        </if>
        <if test="userId != null">
            user_id= #{userId,jdbcType=INTEGER},
        </if>
        <if test="operatorId != null">
            operator_id= #{operatorId,jdbcType=INTEGER},
        </if>
        <if test="operatorName != null">
            operator_name= #{operatorName,jdbcType=VARCHAR},
        </if>
        <if test="source != null">
            source= #{source,jdbcType=INTEGER},
        </if>
        <if test="type != null">
            type= #{type,jdbcType=INTEGER},
        </if>
    </sql>

    <sql id="select_option">
        <if test="id != null">
            and id= #{id,jdbcType=INTEGER}
        </if>
        <if test="nickName != null">
            and nick_name= #{nickName,jdbcType=VARCHAR}
        </if>
        <if test="phone != null">
            and phone= #{phone,jdbcType=VARCHAR}
        </if>
        <if test="feedbackContent != null">
            and feedback_content= #{feedbackContent,jdbcType=LONGVARCHAR}
        </if>
        <if test="addTime != null">
            and add_time= #{addTime,jdbcType=TIMESTAMP}
        </if>
        <if test="startTime != null">
            and add_time &gt; #{startTime,jdbcType=TIMESTAMP}
        </if>
        <if test="endTime != null">
            and add_time &lt; #{endTime,jdbcType=TIMESTAMP}
        </if>
        <if test="status != null">
            and status= #{status,jdbcType=INTEGER}
        </if>
        <if test="remark != null">
            and remark= #{remark,jdbcType=VARCHAR}
        </if>
        <if test="isDelete != null">
            and is_delete= #{isDelete,jdbcType=INTEGER}
        </if>
        <if test="purpose != null">
            and purpose= #{purpose,jdbcType=VARCHAR}
        </if>
        <if test="userId != null">
            and user_id= #{userId,jdbcType=INTEGER}
        </if>
        <if test="operatorId != null">
            and operator_id= #{operatorId,jdbcType=INTEGER}
        </if>
        <if test="operatorName != null">
            and operator_name= #{operatorName,jdbcType=VARCHAR}
        </if>
        <if test="source != null">
            and source= #{source,jdbcType=INTEGER}
        </if>
        <if test="type != null">
            and type= #{type,jdbcType=INTEGER}
        </if>
    </sql>

    <update id="batchUpdate" parameterType="java.util.List">
        <foreach collection="feedbackList" item="item" index="index" open="" close="" separator=";">
            update feedback
            <set>
                <if test="item.isDelete != null">
                    is_delete= #{item.isDelete,jdbcType=INTEGER}
                </if>
            </set>
            where id= #{item.id}
        </foreach>
    </update>

</mapper>