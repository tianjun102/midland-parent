<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.midland.web.dao.SiteMapMapper">

 	<resultMap id="BaseResultMap" type="com.midland.web.model.SiteMap" >
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="mode_id" property="modeId" jdbcType="INTEGER" />
		<result column="mode_name" property="modeName" jdbcType="VARCHAR" />
		<result column="city_id" property="cityId" jdbcType="VARCHAR" />
		<result column="city_name" property="cityName" jdbcType="VARCHAR" />
		<result column="cate_id" property="cateId" jdbcType="INTEGER" />
		<result column="cate_name" property="cateName" jdbcType="VARCHAR" />
		<result column="link_url" property="linkUrl" jdbcType="VARCHAR" />
		<result column="is_delete" property="isDelete" jdbcType="INTEGER" />
		<result column="order_by" property="orderBy" jdbcType="INTEGER" />
		<result column="is_show" property="isShow" jdbcType="INTEGER" />
		<result column="source" property="source" jdbcType="INTEGER" />
	</resultMap>

	<sql id="Base_Column_List">
		id,name,mode_id,mode_name,city_id,city_name,cate_id,cate_name,link_url,is_delete,order_by,is_show,source
	</sql>

	<select id="selectSiteMapById" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> from site_map
		 where id= #{id}
	</select>

	<delete id="deleteSiteMapById" >
		delete from site_map
		 where id= #{id}
	</delete>

	<update id="updateSiteMapSelectiveById" >
		update site_map 
		<set>
		<include refid="update_option_setive"/>
		</set>

		 where id= #{id}
	</update>
	<update id="updateSiteMapById" >
		update site_map
		<set>
		<include refid="update_option"/>
		</set>

		 where id= #{id}
	</update>

	<select id="findSiteMapList" parameterType="com.midland.web.model.SiteMap" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> from site_map
		where  1=1
		<if test="isDelete == null">
			and is_delete=0
		</if>
		<include refid="select_option" />
		ORDER BY order_by ASC
	</select>
	<select id="findSiteMapByList" parameterType="com.midland.web.model.SiteMap" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> from site_map
		where  1=1 and is_delete=0 AND mode_id is null
		<if test="list.size >0">
			AND cate_id in
			<foreach collection="list" index="index" item="item" open="(" separator="," close=")">
				#{item}
			</foreach>
		</if>

		ORDER BY order_by ASC
	</select>
	<select id="findSiteMapByModeId" parameterType="com.midland.web.model.SiteMap" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> from site_map
		where  1=1 and is_delete=0
		<if test="list.size >0">
			AND mode_id in
			<foreach collection="list" index="index" item="item" open="(" separator="," close=")">
				#{item}
			</foreach>
		</if>

		ORDER BY order_by ASC
	</select>

	<insert id="insertSiteMap" parameterType="com.midland.web.model.SiteMap">
		<selectKey resultType="INTEGER" order="BEFORE" keyProperty="orderBy">
			SELECT count(0)+1 as orderBy from site_map
		</selectKey>
		insert into site_map
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="name != null">
				name,
			</if>
			<if test="modeId != null">
				mode_id,
			</if>
			<if test="modeName != null">
				mode_name,
			</if>
			<if test="cityId != null">
				city_id,
			</if>
			<if test="cityName != null">
				city_name,
			</if>
			<if test="cateId != null">
				cate_id,
			</if>
			<if test="cateName != null">
				cate_name,
			</if>
			<if test="linkUrl != null">
				link_url,
			</if>
			<if test="isDelete != null">
				is_delete,
			</if>
			<if test="orderBy != null">
				order_by,
			</if>
			<if test="isShow != null">
				is_show,
			</if>
			<if test="source != null">
				source,
			</if>
		</trim>
		values
		 <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="modeId != null">
				#{modeId,jdbcType=INTEGER},
			</if>
			<if test="modeName != null">
				#{modeName,jdbcType=VARCHAR},
			</if>
			<if test="cityId != null">
				#{cityId,jdbcType=VARCHAR},
			</if>
			<if test="cityName != null">
				#{cityName,jdbcType=VARCHAR},
			</if>
			<if test="cateId != null">
				#{cateId,jdbcType=INTEGER},
			</if>
			<if test="cateName != null">
				#{cateName,jdbcType=VARCHAR},
			</if>
			<if test="linkUrl != null">
				#{linkUrl,jdbcType=VARCHAR},
			</if>
			<if test="isDelete != null">
				#{isDelete,jdbcType=INTEGER},
			</if>
			<if test="orderBy != null">
				#{orderBy,jdbcType=INTEGER},
			</if>
			<if test="isShow != null">
				#{isShow,jdbcType=INTEGER},
			</if>
			<if test="source != null">
				#{source,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>

	<sql id="update_option">
			name= #{name,jdbcType=VARCHAR},
			mode_id= #{modeId,jdbcType=INTEGER},
			mode_name= #{modeName,jdbcType=VARCHAR},
			city_id= #{cityId,jdbcType=VARCHAR},
			city_name= #{cityName,jdbcType=VARCHAR},
			cate_id= #{cateId,jdbcType=INTEGER},
			cate_name= #{cateName,jdbcType=VARCHAR},
			link_url= #{linkUrl,jdbcType=VARCHAR},
			is_delete= #{isDelete,jdbcType=INTEGER},
			order_by= #{orderBy,jdbcType=INTEGER},
			is_show= #{isShow,jdbcType=INTEGER},
			source= #{source,jdbcType=INTEGER},
	</sql>
	
	
	<sql id="update_option_setive">
		<if test="name != null">
			name= #{name,jdbcType=VARCHAR},
		</if>
			mode_id= #{modeId,jdbcType=INTEGER},
			mode_name= #{modeName,jdbcType=VARCHAR},
		<if test="cityId != null">
			city_id= #{cityId,jdbcType=VARCHAR},
		</if>
		<if test="cityName != null">
			city_name= #{cityName,jdbcType=VARCHAR},
		</if>
		<if test="cateId != null">
			cate_id= #{cateId,jdbcType=INTEGER},
		</if>
		<if test="cateName != null">
			cate_name= #{cateName,jdbcType=VARCHAR},
		</if>
		<if test="linkUrl != null">
			link_url= #{linkUrl,jdbcType=VARCHAR},
		</if>
		<if test="isDelete != null">
			is_delete= #{isDelete,jdbcType=INTEGER},
		</if>
		<if test="orderBy != null">
			order_by= #{orderBy,jdbcType=INTEGER},
		</if>
		<if test="isShow != null">
			is_show= #{isShow,jdbcType=INTEGER},
		</if>
		<if test="source != null">
			source= #{source,jdbcType=INTEGER},
		</if>
	</sql>

	<sql id="select_option">
		<if test="id != null">
			 and id= #{id,jdbcType=INTEGER}
		</if>
		<if test="name != null">
			 and name= #{name,jdbcType=VARCHAR}
		</if>
		<if test="modeId != null">
			 and mode_id= #{modeId,jdbcType=INTEGER}
		</if>
		<if test="modeName != null">
			 and mode_name= #{modeName,jdbcType=VARCHAR}
		</if>
		<if test="cityId != null">
			 and city_id= #{cityId,jdbcType=VARCHAR}
		</if>
		<if test="cityName != null">
			 and city_name= #{cityName,jdbcType=VARCHAR}
		</if>
		<if test="cateId != null">
			 and cate_id= #{cateId,jdbcType=INTEGER}
		</if>
		<if test="cateName != null">
			 and cate_name LIKE '%${cateName}%'
		</if>
		<if test="linkUrl != null">
			 and link_url= #{linkUrl,jdbcType=VARCHAR}
		</if>
		<if test="isDelete != null">
			 and is_delete= #{isDelete,jdbcType=INTEGER}
		</if>
		<if test="orderBy != null">
			 and order_by= #{orderBy,jdbcType=INTEGER}
		</if>
		<if test="isShow != null">
			 and is_show= #{isShow,jdbcType=INTEGER}
		</if>
		<if test="source != null">
			 and source= #{source,jdbcType=INTEGER}
		</if>
	</sql>

	<update id="batchUpdate" parameterType="java.util.List">
		<foreach collection="siteMapList" item="item" index="index" open="" close="" separator=";">
			update site_map
			<set>
				<if test="item.isDelete != null">
					is_delete= #{item.isDelete,jdbcType=INTEGER}
				</if>
			</set>
			where id= #{item.id}
		</foreach>
	</update>

</mapper>