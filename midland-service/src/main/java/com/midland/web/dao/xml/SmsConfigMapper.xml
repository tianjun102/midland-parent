	<sql id="update_option">
		<if test="enaitDesc != null">
			enait_desc= #{enaitDesc,jdbcType=VARCHAR},
		</if>
		<if test="riceDesc != null">
			rice_desc= #{riceDesc,jdbcType=VARCHAR},
