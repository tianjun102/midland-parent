		</if>
		<if test="accessoriesDesc != null">
			accessories_desc= #{accessoriesDesc,jdbcType=VARCHAR},
		</if>
		<if test="isDelete != null">
			is_delete= #{isDelete,jdbcType=INTEGER},
		</if>
