<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.midland.web.dao.MenuTypeMapper">

    <resultMap id="BaseResultMap" type="com.midland.web.model.MenuType">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="parent_id" property="parentId" jdbcType="INTEGER"/>
        <result column="parent_name" property="parentName" jdbcType="VARCHAR"/>
        <result column="is_delete" property="isDelete" jdbcType="INTEGER"/>
        <result column="city_id" property="cityId" jdbcType="VARCHAR"/>
        <result column="city_name" property="cityName" jdbcType="VARCHAR"/>
        <result column="order_by" property="orderBy" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,parent_id,parent_name,is_delete,city_id,city_name,order_by
    </sql>

    <select id="selectMenuTypeById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from menu_type
        where id= #{id}
    </select>

    <select id="shiftDown" parameterType="com.midland.web.model.MenuType" resultMap="BaseResultMap">
        select id,order_by from menu_type where 1=1
        <include refid="select_option1"/>
        AND
        order_by &lt; #{orderBy} order by order_by desc LIMIT 1

    </select>
    <select id="shiftUp" parameterType="com.midland.web.model.MenuType" resultMap="BaseResultMap">
        select id,order_by from menu_type where 1=1
        <include refid="select_option1"/>
        AND
        order_by &gt; #{orderBy} order by order_by asc LIMIT 1

    </select>

    <delete id="deleteMenuTypeById">
        delete from menu_type
        where id= #{id}
    </delete>

    <update id="updateMenuTypeById">
        update menu_type
        <set>
            <include refid="update_option"/>
        </set>

        where id= #{id}
    </update>

    <select id="findMenuTypeList" parameterType="com.midland.web.model.MenuType" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from menu_type
        where 1=1
        <include refid="select_option"/>
        ORDER BY order_by ASC
    </select>

    <select id="findRootMenuTypeList" parameterType="com.midland.web.model.MenuType" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from menu_type
        where
        is_delete=0 AND parent_id=0
    </select>
    <select id="findMenuTypeTree" parameterType="com.midland.web.model.MenuType" resultMap="BaseResultMap">
        SELECT b.*,(SELECT name from menu_type a where a.id=b.parent_id ) as parent_name
        FROM `menu_type` b
        where
        is_delete=0
        <include refid="select_option"/>
    </select>

    <insert id="insertMenuType" parameterType="com.midland.web.model.MenuType">
        <selectKey resultType="INTEGER" order="BEFORE" keyProperty="orderBy">
            SELECT MAX(order_by) +1 as orderBy from menu_type
        </selectKey>
        insert into menu_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                name,
            </if>
            <if test="parentId != null">
                parent_id,
            </if>
            <if test="parentName != null">
                parent_name,
            </if>
            <if test="isDelete != null">
                is_delete,
            </if>
            <if test="cityId != null">
                city_id,
            </if>
            <if test="cityName != null">
                city_name,
            </if>
            <if test="orderBy != null">
                order_by,
            </if>

        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="parentId != null">
                #{parentId,jdbcType=INTEGER},
            </if>
            <if test="parentName != null">
                #{parentName,jdbcType=VARCHAR},
            </if>
            <if test="isDelete != null">
                #{isDelete,jdbcType=INTEGER},
            </if>
            <if test="cityId != null">
                #{cityId,jdbcType=VARCHAR},
            </if>
            <if test="cityName != null">
                #{cityName,jdbcType=VARCHAR},
            </if>
            <if test="orderBy != null">
                #{orderBy,jdbcType=INTEGER},
            </if>

        </trim>
    </insert>

    <sql id="update_option">
        <if test="name != null">
            name= #{name,jdbcType=VARCHAR},
        </if>
        <if test="parentId != null">
            parent_id= #{parentId,jdbcType=INTEGER},
        </if>
        <if test="parentName != null">
            parent_name= #{parentName,jdbcType=VARCHAR},
        </if>
        <if test="isDelete != null">
            is_delete= #{isDelete,jdbcType=INTEGER},
        </if>
        <if test="cityId != null">
            city_id= #{cityId,jdbcType=VARCHAR},
        </if>
        <if test="cityName != null">
            city_name= #{cityName,jdbcType=VARCHAR},
        </if>
        <if test="orderBy != null">
            order_by=#{orderBy,jdbcType=INTEGER},
        </if>
    </sql>

    <sql id="select_option">
        <if test="id != null">
            and id= #{id,jdbcType=INTEGER}
        </if>
        <if test="name != null">
            and name= #{name,jdbcType=VARCHAR}
        </if>
        <if test="parentId != null">
            and parent_id= #{parentId,jdbcType=INTEGER}
        </if>
        <if test="parentName != null">
            and parent_name= #{parentName,jdbcType=VARCHAR}
        </if>
        <if test="isDelete != null">
            and is_delete= #{isDelete,jdbcType=INTEGER}
        </if>
        <if test="cityId != null">
            and city_id= #{cityId,jdbcType=VARCHAR}
        </if>
        <if test="cityName != null">
            and city_name= #{cityName,jdbcType=VARCHAR}
        </if>
    </sql>
    <sql id="select_option1">

        <if test="name != null">
            and name= #{name,jdbcType=VARCHAR}
        </if>
        <if test="parentId != null">
            and parent_id= #{parentId,jdbcType=INTEGER}
        </if>
        <if test="parentName != null">
            and parent_name= #{parentName,jdbcType=VARCHAR}
        </if>
        <if test="isDelete != null">
            and is_delete= #{isDelete,jdbcType=INTEGER}
        </if>
        <if test="cityId != null">
            and city_id= #{cityId,jdbcType=VARCHAR}
        </if>
        <if test="cityName != null">
            and city_name= #{cityName,jdbcType=VARCHAR}
        </if>
    </sql>

    <update id="batchUpdate" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" open="" close="" separator=";">
            update menu_type
            <set>
                <if test="item.isDelete != null">
                    is_delete= #{item.isDelete,jdbcType=INTEGER}
                </if>
            </set>
            where id= #{item.id}
        </foreach>
    </update>

</mapper>