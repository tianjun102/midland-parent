    <select id="getUnCommentList" parameterType="com.midland.web.model.Appointment" resultMap="BaseResultMap">
        SELECT
        id,
        user_id AS user_id,
        agent_id,
        agent_name,
        address,
        layout,
        measure,
        agent_phone,
        price,
        community_name,
        appointment_time as handle_time,
        decoration,
        range_to_subway,avg_price,house_id,house_img,house_floor,
        '2' as type
        FROM
        appointment
        WHERE
        is_delete = 0
        AND user_id = #{userId}
        AND STATUS = 3
        AND id NOT IN (
        SELECT
        information_id
        FROM
        `comment`
        WHERE
        user_id = #{userId}
        AND type = 2
        )


        UNION

        SELECT
        id,
        user_id,
        agent_id,
        agent_name,
        address,
        layout,
        measure,
        agent_phone,
        price,
        community_name,
        entrust_time as handle_time,
        renovation as decoration,
        range_to_subway,avg_price,house_id,house_img,house_floor,
        '1' as type
        FROM
        entrust
        WHERE
        is_delete = 0
        AND STATUS = 5
        AND user_id=#{userId}
        AND id NOT IN (
        SELECT
        information_id
        FROM
        `comment`
        WHERE
        user_id = #{userId}
        AND type = 1
        )
    </select>

