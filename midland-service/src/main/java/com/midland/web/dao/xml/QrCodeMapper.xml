<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.midland.web.dao.QrCodeMapper">

    <resultMap id="BaseResultMap" type="com.midland.web.model.QrCode">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="img_url" property="imgUrl" jdbcType="VARCHAR"/>
        <result column="city_id" property="cityId" jdbcType="VARCHAR"/>
        <result column="source" property="source" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="is_show" property="isShow" jdbcType="INTEGER"/>
        <result column="is_delete" property="isDelete" jdbcType="INTEGER"/>
        <result column="city_name" property="cityName" jdbcType="VARCHAR"/>
        <result column="detail" property="detail" jdbcType="LONGVARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,img_url,city_id,source,name,is_show,is_delete,city_name,detail
    </sql>

    <select id="selectQrCodeById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from qr_code
        where id= #{id}
    </select>

    <delete id="deleteQrCodeById">
        delete from qr_code
        where id= #{id}
    </delete>

    <update id="updateQrCodeById">
        update qr_code
        <set>
            <include refid="update_option"/>
        </set>

        where id= #{id}
    </update>

    <select id="findQrCodeList" parameterType="com.midland.web.model.QrCode" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from qr_code
        where 1=1
        <if test="isDelete == null">
            and is_delete=0
        </if>
        <include refid="select_option"/>
    </select>

    <insert id="insertQrCode" parameterType="com.midland.web.model.QrCode">
        insert into qr_code
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="imgUrl != null">
                img_url,
            </if>
            <if test="cityId != null">
                city_id,
            </if>
            <if test="source != null">
                source,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="isShow != null">
                is_show,
            </if>
            <if test="isDelete != null">
                is_delete,
            </if>
            <if test="cityName != null">
                city_name,
            </if>
            <if test="detail != null">
                detail,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="imgUrl != null">
                #{imgUrl,jdbcType=VARCHAR},
            </if>
            <if test="cityId != null">
                #{cityId,jdbcType=VARCHAR},
            </if>
            <if test="source != null">
                #{source,jdbcType=INTEGER},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="isShow != null">
                #{isShow,jdbcType=INTEGER},
            </if>
            <if test="isDelete != null">
                #{isDelete,jdbcType=INTEGER},
            </if>
            <if test="cityName != null">
                #{cityName,jdbcType=VARCHAR},
            </if>
            <if test="detail != null">
                #{detail,jdbcType=LONGVARCHAR},
            </if>
        </trim>
    </insert>

    <sql id="update_option">
        <if test="imgUrl != null">
            img_url= #{imgUrl,jdbcType=VARCHAR},
        </if>
        <if test="cityId != null">
            city_id= #{cityId,jdbcType=VARCHAR},
        </if>
        <if test="source != null">
            source= #{source,jdbcType=INTEGER},
        </if>
        <if test="name != null">
            name= #{name,jdbcType=VARCHAR},
        </if>
        <if test="isShow != null">
            is_show= #{isShow,jdbcType=INTEGER},
        </if>
        <if test="isDelete != null">
            is_delete= #{isDelete,jdbcType=INTEGER},
        </if>
        <if test="cityName != null">
            city_name= #{cityName,jdbcType=VARCHAR},
        </if>
        <if test="detail != null">
            detail= #{detail,jdbcType=LONGVARCHAR},
        </if>
    </sql>

    <sql id="select_option">
        <if test="id != null">
            and id= #{id,jdbcType=INTEGER}
        </if>
        <if test="imgUrl != null">
            and img_url= #{imgUrl,jdbcType=VARCHAR}
        </if>
        <if test="cityId != null">
            and city_id= #{cityId,jdbcType=VARCHAR}
        </if>
        <if test="source != null">
            and source= #{source,jdbcType=INTEGER}
        </if>
        <if test="name != null">
            and name= #{name,jdbcType=VARCHAR}
        </if>
        <if test="isShow != null">
            and is_show= #{isShow,jdbcType=INTEGER}
        </if>
        <if test="isDelete != null">
            and is_delete= #{isDelete,jdbcType=INTEGER}
        </if>
        <if test="cityName != null">
            and city_name= #{cityName,jdbcType=VARCHAR}
        </if>
        <if test="detail != null">
            and detail= #{detail,jdbcType=LONGVARCHAR}
        </if>
    </sql>

    <update id="batchUpdate" parameterType="java.util.List">
        <foreach collection="qrCodeList" item="item" index="index" open="" close="" separator=";">
            update qr_code
            <set>
                <if test="item.isDelete != null">
                    is_delete= #{item.isDelete,jdbcType=INTEGER}
                </if>
            </set>
            where id= #{item.id}
        </foreach>
    </update>

</mapper>